<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Liste des messages</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Recepteur</th>
                        <th>Message</th>
                        <th>Status</th>
                        <th>Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in sms %}
                        <tr>
                            <td>{{ item.id }}</td>
                            <td>{{ item.recipient }}</td>
                            <td>{{ item.message }}</td>
                            <td>{{ item.sent }}</td>
                            <td>{{ item.createdAt|date('Y-m-d H:i') }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="navigation mt-2">
            {{ knp_pagination_render(sms) }}
        </div>
    </div>
</div>
