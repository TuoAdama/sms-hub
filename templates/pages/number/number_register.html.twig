{% extends "base.html.twig" %}

{% block title %}
    {{ 'register.number'|trans }}
{% endblock %}


{% block content %}
    <div class="register-box mx-auto p-3">
        <div class="card card-outline card-secondary mx-auto mh-100">
            <div class="card-body">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}" role="alert">{{ message }}</div>
                    {% endfor %}
                {% endfor %}
                {{ form_start(form) }}
                {{ form_row(form.phoneNumber) }}
                <div class="row">
                    <div class="col-12 my-3">
                        <button type="submit" class="btn btn-primary btn-block">{{ 'btn.register'|trans }}</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

