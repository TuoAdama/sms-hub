{% extends "base.html.twig" %}

{% block title %}
    {{ 'register.number'|trans }}
{% endblock %}


{% block content %}
    <div class="register-box border border-secondary mx-auto">
        <div class="card card-outline card-secondary mx-auto mh-100">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
            <div class="card-body">
                {{ form_start(form) }}
                <div class="input-group mb-3 flex-nowrap">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-flag"></span>
                        </div>
                    </div>
                    {{ form_row(form.countryCode) }}
                </div>
                <div class="input-group mb-3 flex-nowrap">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            +33
                        </div>
                    </div>
                    {{ form_row(form.number) }}
                </div>
                <div class="row">
                    <div class="col-12 my-3">
                        <button type="submit" class="btn btn-primary btn-block">{{ 'btn.register'|trans }}</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

